<MainScreen>:
    name: 'Main7'
    on_enter:root.start_joy_thread()
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: turnOnMotorButton
        text: "On"
        size: 100, 100
        x: root.width * 0.6
        y: root.width * 0.2
        on_press: root.turnOnMotor(self.text)
        on_press: root.changeSpeed(self.text)

    DPEAButton
        id: changeMotorDirectionButton
        text: "clockWise"
        size: 100, 100
        x: root.width * 0.4
        y: root.width * 0.2
        on_press: self.text = root.changeMotorDirection(self.text)

    BoxLayout:
        Slider:
            id: sliderForMotorSpeed
            size: 400, 30
            size_hint: 0.4, .2
            min: 0
            max: 100
            x: root.width * 0
            y: root.width * 0.3
            step: 1
            orientation: 'horizontal'
            on_touch_move: speed = sliderForMotorSpeed.value
            on_touch_move: root.turnOnMotor(self)

            #s0.run(direction, sliderForMotorSpeed.value)

        Label:
            text: str(sliderForMotorSpeed.value)
            font_size: 50
            x: root.width * 0.2
            y: root.width * -0.3
            color: 1, 0.7, 0.2, .6

    DPEAButton
        id: exitProgramButton
        text: "Bye-Bye"
        size: 100, 100
        x: root.width * 0.5
        y: root.width * 0.5
        on_press: root.exit_program()



    DPEAButton
        id: buttonThatDoesStuff
        text: "whee"
        size: 100, 100
        x: root.width * 0.2
        y: root.width * 0.2
        on_press: root.thatDoesStuff()
#        on_press: buttonThatDoesStuffLabel.text = root.thatDoesStuffLabel(buttonThatDoesStuffLabel.text)

    Label:
        id: buttonThatDoesStuffLabel
        text: "Test"
        font_size: 50
        x: root.width * 0.2
        y: root.width * 0.1
        color: 1, 0.7, 0.2, .6

    DPEAButton
        id: buttonServoMotorBinaryState
        text: "Servo"
        size: 100, 100
        x: root.width * 0.2
        y: root.width * 0.4
        on_press: root.servoMotorBinaryState()


